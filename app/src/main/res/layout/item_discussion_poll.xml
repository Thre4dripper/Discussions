<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/posts_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/user_post_more_options"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_more_options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_post_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/profile_image_desc"
            app:layout_constraintBottom_toTopOf="@+id/item_post_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item_post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/posts_more_options"
            app:layout_constraintStart_toEndOf="@+id/item_post_user_image"
            app:layout_constraintTop_toTopOf="@+id/item_post_user_image"
            tools:text="@string/username" />

        <TextView
            android:id="@+id/item_post_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_post_user_image"
            app:layout_constraintEnd_toEndOf="@+id/item_post_username"
            app:layout_constraintStart_toStartOf="@+id/item_post_username"
            app:layout_constraintTop_toBottomOf="@+id/item_post_username"
            tools:text="@string/post_list_item_time" />

        <TextView
            android:id="@+id/item_post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/item_post_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_post_user_image"
            app:layout_constraintTop_toBottomOf="@+id/item_post_user_image"
            tools:text="@string/post_list_item_title" />

        <TextView
            android:id="@+id/item_post_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/item_poll_options_ll"
            app:layout_constraintEnd_toEndOf="@+id/item_post_title"
            app:layout_constraintStart_toStartOf="@+id/item_post_title"
            app:layout_constraintTop_toBottomOf="@+id/item_post_title"
            tools:text="@string/post_list_item_content" />

        <LinearLayout
            android:id="@+id/item_poll_options_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/item_poll_ll1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_post_content">

            <TextView
                android:id="@+id/item_poll_option1"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option1_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="24%" />

                <ProgressBar
                    android:id="@+id/item_poll_option1_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="24" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_poll_option2"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option2_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="15%" />

                <ProgressBar
                    android:id="@+id/item_poll_option2_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="15" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_poll_option3"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option3_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="12%" />

                <ProgressBar
                    android:id="@+id/item_poll_option3_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="12" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_poll_option4"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option4_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="16%" />

                <ProgressBar
                    android:id="@+id/item_poll_option4_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="16" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_poll_option5"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option5_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="30%" />

                <ProgressBar
                    android:id="@+id/item_poll_option5_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="30" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_poll_option6"
                style="@style/ItemPollOptionTvStyle"
                app:drawableStartCompat="@drawable/ic_circle_unchecked"
                tools:text="Option 6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_poll_option6_votes"
                    style="@style/ItemPollVotesTvStyle"
                    tools:text="2%" />

                <ProgressBar
                    android:id="@+id/item_poll_option6_progress"
                    style="@style/ItemPollOptionProgress"
                    android:progress="2" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_poll_ll1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/item_poll_ll2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_poll_options_ll">

            <TextView
                android:id="@+id/item_post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                tools:text="@string/post_list_item_like_count" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_post_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                tools:text="@string/post_list_item_comment_count" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_poll_ll2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_poll_ll1"
            app:layout_constraintStart_toStartOf="@+id/item_poll_ll1"
            app:layout_constraintTop_toBottomOf="@+id/item_poll_ll1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/post_list_item_like"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_like" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/post_list_item_comment"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_comments" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>